<h1>edit.gossip.</h1>

<%= form_for @gossip, url: gossip_path do |f| %>
  <div class="form-group">
    <%= f.text_field :body, placeholder: "body", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit 'edit!', class: "btn btn-default" %>
  </div>
<% end %>

<%= button_to 'back!', moussaillon_path(@gossip.moussaillon.id), method: :get, class: "btn btn-default" %>
